{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ESNext",
    "pretty": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "outDir": "./lib",
    "declaration": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
